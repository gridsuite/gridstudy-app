{
    "root": true,
    "extends": ["react-app", "plugin:prettier/recommended"],
    "ignorePatterns": [
        // node_modules is implicitly always ignored
        "build",
        "coverage"
    ],
    "plugins": ["react-refresh"],
    "rules": {
        "prettier/prettier": "warn",
        "curly": "error",
        "react-refresh/only-export-components": [
            "error",
            { "allowConstantExport": true }
        ]
    }
}
